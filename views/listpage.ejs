<!DOCTYPE html>
<html>
<head> <% include ./head %> </head>
<body>
<% include ./header %>

    <a class="btn purple" href="/additem">Add New Item</a>

    <div class="card purple">

    <table class="highlight">
        <tr>
            <th>Video Game Name</th>
            <th>URL of Video Game</th>
            <th>Created By</th>
            <th>Added By</th>
            <th>Likes</th>
            <th>Dislikes</th>
            <th>Actions</th>

        </tr>

        <% items.forEach(function(item){  %>


<tr>
        <td>
    <%= item.videoGameName %></td>
        <td> <%= item.URLofvideogame %></td>
        <td> <%= item.Createdby %></td>
        <td> <%= item.addedBy %></td>
        <td> <%= item.likes %></td>
        <td> <%= item.dislikes %></td>
        <td>
            <a href="/delete?gameName=<%=item.videoGameName%>"><i class="material-icons">delete</i></a>
             <a href="/like?gameName=<%=item.videoGameName%>"><i class="material-icons">thumb_up</i></a>
            <a href="/dislike?gameName=<%=item.videoGameName%>"><i class="material-icons">thumb_down</i></a>
                </td>
        </tr>


        <% }) %>
    </table>

    </div>

<% include ./footer %>
</body>
</html>
